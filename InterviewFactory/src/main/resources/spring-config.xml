<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.softserveinc.ita.interviewfactory.factory" />

    <bean id="interviewFactory" class="org.springframework.beans.factory.config.ServiceLocatorFactoryBean">
        <property name="serviceLocatorInterface" value="com.softserveinc.ita.interviewfactory.factory.InterviewFactory" />
    </bean>

    <alias name="InterviewWithoutQuestions" alias="InterviewWithoutQuestions" />
    <alias name="InterviewWithStandardQuestions" alias="InterviewWithStandardQuestions" />
    <alias name="InterviewWithUserAndStandardQuestions" alias="InterviewWithUserAndStandardQuestions" />
    <bean id="interviewUtilJson" class="com.softserveinc.ita.utils.impl.InterviewJsonUtilGsonImpl"/>
    <bean id="userService" class="com.softserveinc.ita.service.mocks.UserServiceMock"/>
    <bean id="appointmentService" class="com.softserveinc.ita.service.mocks.AppointmentServiceMock" />
</beans>